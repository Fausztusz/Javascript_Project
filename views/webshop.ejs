<script>
    $('.inputfield').change(function () {
        var element = $(this);
        var price = (element.parent().parent().children().eq(4).html());
        price = price.substring(0, price.length - 1)
        var quantity = (element.val());
        element.parent().parent().children().eq(6).html(quantity*price+'$');
    });
</script>
