<% include header %>
<% include navbar %>

<table class="table table-striped table-hover marginedContainer " style="width: 95%;">
    <p class="description">Create New Product:</p>
    <thead>
    <tr>
        <th>Product</th>
        <th>Description</th>
        <th>Image</th>
        <th>Price</th>
        <th>Submit</th>
    </tr>
    </thead>
    <tbody>
    <form method="post" action="/createproduct/submit">
    <tr>
        <td><input name="name" type="text"></td>
        <td><input name="description" type="text"></td>
        <td><input name="picture" type="text"></td>
        <td><input name="price" type="number" min="0"></td>
        <td>
            <button type="submit" class="btn btn-primary custom">Submit</button>
        </td>
    </tr>
    </form>
    </tbody>
</table>

<table class="table table-striped table-hover marginedContainer" style="width: 95%;">
    <p class="description">Edit Products:</p>
    <thead>
    <tr>
        <th>Product</th>
        <th>Description</th>
        <th>Image</th>
        <th>Price</th>
        <th>Edit</th>
        <th>Remove</th>
    </tr>
    </thead>
    <tbody>
    <% product.forEach(function(product){ %>
    <%- include('createproductTableCell', {product: product}); %>
    <% }); %>

    </tbody>
</table>


</div>
<% include footer %>