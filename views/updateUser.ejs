<% include header %>
<% include navbar %>


<table class="table table-striped table-hover marginedContainer " style="width: 95%;">
    <p class="description">Update the user's data</p>
    <thead>
    <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Profil Picture</th>
        <th>Role</th>
        <th>Edit user</th>
    </tr>
    </thead>
    <tbody>
    <form action="/editusers/edit/submit" method="post">
        <tr>
            <td><input name="name" placeholder="Username" type="text"></td>
            <td><input name="email" placeholder="Email" type="text"></td>
            <td>
                <input name="picture" placeholder="Picture URL" type="text">
            </td>
            <td>
                <input name="role" value="<%= user.role %>" type="number" min="0" max="1" >
            </td>
            <td>
                <button type="submit" name="_id" value="<%= user._id %>" class="btn btn-primary ">Edit</button>
            </td>
        </tr>
    </form>
    <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
            <div style='background-image:url(<%= user.picture %>)' class="thumbnail custom"></div>
        </td>
        <td><%= user.role == 0 ? 'User' : 'Admin' %></td>
    </tr>
    </tbody>
</table>

</div>
<div class="overlay">
    <div id="overlayImage"></div>
    <div id="overlayText"></div>
</div>
<% include header %>