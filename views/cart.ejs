<% include header %>
<% include navbar %>

<div class="description">
    <div style="display: inline-block">
        Your Cart
    </div>
    <div class="pay">
        <form action="pay">
            <button class="btn btn-success payButton">Pay</button>
        </form>
    </div>
</div>
<table class="table table-striped table-hover marginedContainer " style="width: 95%;">
    <thead>
    <tr>
        <th>Product</th>
        <th>Description</th>
        <th>Image</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Remove</th>
    </tr>
    </thead>
    <tbody>
    <% cart.forEach(function(product){ %>
    <%- include('cartTableCell', {product: product}); %>
    <% }); %>
    </tbody>
</table>


</div>
<div class="overlay">
    <div id="overlayImage"></div>
    <div id="overlayText"></div>
</div>
<% include footer %>